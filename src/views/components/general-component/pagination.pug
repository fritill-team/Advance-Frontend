.pagination
	nav.pagination__navbar(aria-label='Page navigation example')
		ul.pagination__list
			li.pagination__item
				a.pagination__link(href='#' aria-label='Previous')
					i.fas.fa-chevron-left.pagination-icon
			li.pagination__item
				a.pagination__link.active(href='#') 1
			li.pagination__item
				a.pagination__link(href='#') 2
			li.pagination__item
				a.pagination__link(href='#') 3
			li.pagination__item
				a.pagination__link(href='#') ...
			li.pagination__item
				a.pagination__link(href='#' aria-label='Next')
					i.fas.fa-chevron-right.pagination-icon

.pagination__list 
	button.btn.btn--icon-basic.btn--primary.icon--hover(href='#' aria-label='Previous')
		i.fas.fa-chevron-left.pagination-icon
	button.btn.btn--icon-basic.btn--primary.icon--hover.text-1(href='#') 1
	button.btn.btn--icon-basic.btn--primary.icon--hover.text-1(href='#') 2
	button.btn.btn--icon-basic.btn--primary.icon--hover.text-1(href='#') 3
	button.btn.btn--icon-basic.btn--primary.icon--hover.text-1(href='#') ...
	button.btn.btn--icon-basic.btn--primary.icon--hover(href='#' aria-label='Next')
		i.fas.fa-chevron-right.pagination-icon
