mixin user-account(className,srcImg,userText,userName)
	.user-wrapper__account(class=className)
		.account__live-user
			.live-user__content
				a.content__user-img(href='#')
					img.user-img__img(src=srcImg alt='')
			.live-user__user-content
				a.user-content__text(class=userName href='#')= userText
				block

//- user-account rating
mixin account-review(srcImg,userName,time)
	.item__reviews-user
		img.reviews-user__img(src=srcImg alt='')
		.reviews-user__title
			a(class="btn btn--text title__name" href="#")= userName
			span(class="title__time")= time
		block dropdown

mixin user-card(srcImg, userName, data)
	.user-account 
		img(class="image image--profile" src=srcImg alt='')
		.user-account__content 
			a(class="body-2")=userName 
			p.body-2=data