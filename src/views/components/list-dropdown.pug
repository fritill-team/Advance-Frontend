mixin dropdown
	.dropdown
		button(class="btn dropdown__activator btn--primary btn--text btn--sm btn--icon")
			block
		div(class="dropdown-menu dropdown__content" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown" )
			.list.list--condensed
				a(href="#" class="list-item list-item--one-line list-item--condensed list-item--open ")
					.list-item__avatar
						i.far.fa-copy
					.list-item__content
						span.body-2.bold Edit
					.list-item__action
				a(href="#" class="list-item list-item--one-line  list-item--condensed list-item--open ")
