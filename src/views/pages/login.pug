	form.ad-form
		section(id="first-tab-group" class="tabgroup")
			#tab1.tabContent
				.field-wrapper 
					label.text-field__label 
						|	Course Title 
						abbr(title="required") *
					.text-field__content
						input.text-field__input.text-field--icon(
							type='email'
							placeholder='Email Address'
							name='email address' 
							data-purpose='edit-course-title' 
							maxlength=''
							required
							id="emailType"
							value=''
							)
						i.far.fa-envelope.icon-message#icon-message(style="display : block") 
				.field-wrapper
					label.text-field__label 
						|	Course Title 
						abbr(title="required") *
					.text-field__content
						input.text-field__input.text-field--icon(
							type='Password'
							placeholder='Password'
							name='Password'  
							maxlength=''
							required
							id="emailType3" 
							) 
						i.fas.fa-key.icon-message 
				.field-wrapper
					.ui.checkbox.icon
						input.hidden#remember(
							type="checkbox"
							tabindex="0" )
						label(for="remember") Remember Me
			#tab2.tabContent 
				.field-wrapper
					.text-field__content.w-100
						input.text-field__input.text-field__input--border-none#phone(
							type="tel"
							name="phone"
							)
					.alert.alert-info(style="display: none")
					.alert.alert-error.alert-danger(style="display: none")
						//- .alert.alert-info(style="display: none")
						//- i.uil.uil-key-skeleton-alt.icon.icon2
				.field-wrapper
					label.text-field__label 
						|	Course Title 
