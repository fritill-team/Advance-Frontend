	form.ad-form
		section(id="first-tab-group" class="tabgroup").pt-5
			#tab1.tabContent
				.field-wrapper.field-wrapper--no-message 
					.text-field__content
						input.text-field__input.text-field--icon(
							type='email'
							placeholder='Email Address'
							name='email address' 
							data-purpose='edit-course-title' 
							maxlength=''
							required
							id="emailType"
							value=''
							)
						i.far.fa-envelope.icon-message#icon-message(style="display : block") 
				.field-wrapper.field-wrapper--no-message.mt-15
					.text-field__content
						input.text-field__input.text-field--icon(
							type='Password'
							placeholder='Password'
							name='Password'  
							maxlength=''
							required
							id="emailType3" 
							) 
						i.fas.fa-key.icon-message 
				.field.mt-30
					.ui.checkbox.icon
						input.hidden#remember(
							type="checkbox"
							tabindex="0" )
						label(for="remember") Remember Me
			#tab2.tabContent
				.mt-15
					label.form-label.d-none(for="phone") Password *
					.text-field__content.w-100
						input.text-field__input.text-field__input--rounded.text-field__input--border-none#phone(
							type="tel"
							name="phone"
							)
					.alert.alert-info(style="display: none")
					.alert.alert-error.alert-danger(style="display: none")
						//- .alert.alert-info(style="display: none")
						//- i.uil.uil-key-skeleton-alt.icon.icon2
				.field-wrapper.field-wrapper--no-message.mt-15
					.text-field__content
						input.text-field__input.text-field--icon(
							type='Password'
							placeholder='Password'
							name='Password'  
							maxlength=''
							required
							id="emailType1" 
							) 
						i.fas.fa-key.icon-message  
				.ui.form.checkbox_sign.mt-30 
					.ui.checkbox.icon
						input.hidden#remember2(
							type="checkbox"
							tabindex="0" )
						label(for="remember2") Remember Me

			button.btn.btn--primary.btn--rounded.btn--center.medium.text-2.px-5.mt-4(type="submit")  Sign In
			p.title-2.mt-4
				a.title-2.btn.btn--primary.btn--text(href="forgot_password.html")  Forgot Password
			.middle-or.d-flex.my-2
				hr
				p.mb-0  Or
				hr
			.socialMedia.d-flex.justify-content-center
				a.social-icon__link.social-icon--fa-bg.social-icon--ml
					i.fab.fa-facebook-f
				a.social-icon__link.social-icon--tw-bg.social-icon--ml
					i.fab.fa-twitter
				a.social-icon__link.social-icon--go-bg.social-icon--ml
					i.fab.fa-google
			p.mb-0.mt-2.title-2 Don't have an account?
				a.btn.btn--success.btn--text.p-0.m-0(href="signup.html")  Sign Up
