extends ../layouts/auth.pug


block title

  title login

block content
  div(class="sign_in_up_bg")
    img(class="sign_in_up_bg--img" src='../../assets/images/sign.svg' alt='')
    .sign_in_up_form-wrapper
      div(class="container ")
        div(class="row justify-content-lg-center justify-content-md-center")
          .col-lg-12
            div(class="main_logo25" , id="logo")
              a(href='index.html')
                img(src='../../assets/images/logo.svg' alt='')
              a(href='index.html')
                img.logo-inverse(src='../../assets/images/logo.svg' alt='')
          div(class="col-lg-6 col-md-8")
            section.sign_form
              h2 Welcome Back
              p Log In to Your Edututs+ Account!
              button(class="social_lnk_btn color_btn_fb")
                i(class="uil uil-facebook-f") Continue with Facebook
              button(class="social_lnk_btn mt-15 color_btn_tw")
                i(class="uil uil-twitter") Continue with Twitter
              button(class="social_lnk_btn mt-15 color_btn_go")
                i(class="uil uil-google") Continue with Google
              form
                div(class="ui search focus mt-15")
                  div(class=" icon input lbel25")
                    label(for="id_email") Email Address *
                    div(class="ui left icon input swdh95 w-100")
                      input(
                        class="prompt srch_explore"
                        type="email"
                        name="emailaddress"
                        id="id_email" required maxlength="64"
                        placeholder="Email Address" autofocus)
                      i(class="uil uil-envelope icon icon2")
                    span(class="requerd d-flex text-danger my-2") Requerd
                div(class="ui search focus mt-15")
                  div(class=" icon input lbel25")
                    label(for="id_password") Password *
                    div(class="ui left icon input swdh95 w-100")
                      input(
                        class="prompt srch_explore"
                        type="password"
                        name="password"
                        id="id_password" required maxlength="64"
                        placeholder="Password" )
                      i(class="uil uil-envelope icon icon2")
                div(class="ui form checkbox_sign mt-30")
                  div(class="inline field")
                    div(class="ui checkbox mncheck")
                      input(
                        class="hidden"
                        type="checkbox"
                        tabindex="0"
                        id="remember")
                      label(for="remember") Remember Me
                button(class="login-btn" type="submit")  Sign In
              p(class="sgntrm145")  Or
                a(href="forgot_password.html")  Forgot Password
              p(class="mb-0 mt-30 hvsng145")  Don't have an account?
                a(href="sign_up.html")  Sign Up
          .sign_footer
            img(src="../../assets/images/sign_logo.png" alt="")
