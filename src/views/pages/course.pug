extends ../layouts/course-display.pug

block title
	title single-course
block category
	include ../components/header-blocks/selectCategory.pug
block btn-link
	include ../components/general-component/btn.pug
	+btn-link('list-item--upload-course', 'Create New Course' , '#create_new_course.html')
block sidebar
	include ../components/sidebar-content.pug
block courseVideo
	.col-xl-4.col-lg-5.col-md-6
		section.wrapper__preview-video
			a.preview-video__modiel-img(href='#' data-toggle='modal' data-target='#videoModal')
				img.modiel-img--img(src='images/courses/img-2.jpg' alt='')
				.modiel-img__course-overlay
					.course-overlay--seller Bestseller
					span.course-overlay--play
						i.uil.uil-play.play__fa
					span._215b02.course-overlay__title Preview this course
		.preview-video__action
			.action__save-video(href='#')
				span.save-video__icons
					i.uil.uil-heart.icons__fa
				| Save
			a.action__rebort-vedios(href='#')
				span.rebort-video__icons
					i.uil.uil-windsock.icons__fa
				| Report abuse
	.col-xl-8.col-lg-7.col-md-6
		article.wrapper__header
			h2.header__title The Web Developer Bootcamp
			span.header__description
				| The only course you need to learn web development - HTML, CSS, JS, Node, and More!
		.wrapper__review-video
			.review-video__review.mr-2
				i.uil.uil-star.review__icone
				| 4.5
			| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;(81,665 ratings)
		.wrapper__enrolled-text
			| 114,521 students enrolled
		.wrapper__language
			.language__lang
				span.lang__icons
					i.uil.uil-comment.icons__fa
				| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;English
			.language__more-lang
				span.more-lang__icons
					i.uil.uil-closed-captioning.icons__fa
				span.more-lang__tooltip
					| English, Dutch
					span.tooltip--caption_tooltip
						| 12 more
						span.tooltip__caption-content
							span.caption-content__lang-item French
							span.caption-content__lang-item Hindi
							span.caption-content__lang-item German [Auto-generated]
							span.caption-content__lang-item Indonesian [Auto-generated]
							span.caption-content__lang-item Italian [Auto-generated]
							span.caption-content__lang-item Japanese [Auto-generated]
							span.caption-content__lang-item Korean
							span.caption-content__lang-item Polish
							span.caption-content__lang-item Portuguese [Auto-generated]
							span.caption-content__lang-item Spanish [Auto-generated]
							span.caption-content__lang-item Traditional Chinese
							span.caption-content__lang-item Turkish [Auto-generated]
		.wrapper__last-update
			| Last updated 1/2020
		ul.wrapper__btn-list
			li.btn-list__list-item
				button.list-item--btn-Enrole Enroll
			li.btn-list__list-item
				button.list-item--btn-Enrole Enroll as Child
			//- li.btn-list__list-item
			//-   button.list-item--btn-Enrole-childe Enrol Chiled
		.wrapper__title-buy
			| 30-Day Money-Back Guarantee
block userAccount
	include ../components/general-component/user-acount.pug
	include ../components/general-component/btn.pug
	+user-acount("Johnson Smith", "Subscribe" , "images/left-imgs/img-1.jpg")
		+btn('user-content__subscribe-btn', 'subscribe')
	include ../components/general-component/interaction.pug
	+interactions("uil uil-share-alt box--fa" , '9')
	+interactions( "uil uil-thumbs-up box--fa", '100')
	+interactions("uil uil-thumbs-down box--fa", '20')
	+interactions( "uil uil-eye box--fa",'1452')
	.course_tabs
		#nav-tab.nav.nav-tabs.tab_crse.justify-content-center(role='tablist')
			a#nav-about-tab.nav-item.nav-link.active(data-toggle='tab' href='#nav-about' role='tab' aria-selected='true') About
			a#nav-courses-tab.nav-item.nav-link(data-toggle='tab' href='#nav-courses' role='tab' aria-selected='false') Courses Content
			a#nav-reviews-tab.nav-item.nav-link(data-toggle='tab' href='#nav-reviews' role='tab' aria-selected='false') Reviews
block tabs
	.course_tab_content
		#nav-tabContent.tab-content
			#nav-about.tab-pane.fade.show.active(role='tabpanel')
				include ../components/about.pug
			#nav-courses.tab-pane.fade(role='tabpanel')
					//- start course list component
					include ../components/course.pug
					a.btn1458(href='#') 20 More Sections
			#nav-reviews.tab-pane.fade(role='tabpanel')
				//- start reviews
				.reviews
					.row
						.col-lg-5
							include ../components/review.pug
						.col-lg-7
							.review__header
								.header__header-content
									h3.header-content__title Reviews
									.header-content__search
										input.search__input(type='text' placeholder='Search reviews...')
										button.search__btn
											i.uil.uil-search
							.review__all-reviews
								include ../components/review-item.pug
								.all-reviews__review-item
									a.review-item__more-reviews(href='#') See More Reviews
