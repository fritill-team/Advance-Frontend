extends ../layouts/site.pug
include ../components/widgets/display-cards
include ../components/widgets/inputs


block title
  title Courses
block content
  div.courses
    .page__cover
      img(src="../../assets/images/courses-header-img.png", alt="", srcset="")
      .container
        .page__cover-content
          h1.page__cover-content-title Courses

    .container
      .card
        .card__content.d-flex.flex-column.flex-md-row.align-items-sm-center
          .field-wrapper
            .switch
              input#label(class="field" type="checkbox", name="")
              label(for="label") label

          .field-wrapper
            .switch
              input#label2(class="field" type="checkbox", name="")
              label(for="label2") label 2

          .field-wrapper
            .switch
              input#label3(class="field" type="checkbox", name="")
              label(for="label3") label 3

          .field-wrapper
            .switch
              input#label4(class="field" type="checkbox", name="")
              label(for="label4") label 4

          .field-wrapper__content
            select.field
              option(value='') Select option
              option(value='1') option 1
              option(value='2') option 2
              option(value='3') option 3
              option(value='4') option 4
              option(value='5') option 5

          div(class="listing-header__actions" data-target=".display-card-container")
            button(class="btn btn--icon btn--text btn--primary filters-toggle")
              i.material-icons filter_list
            button(class="btn btn--icon btn--text btn--primary switch-view" data-view="list")
              i.material-icons list
            button(class="btn btn--icon btn--primary switch-view" data-view="grid")
              i.material-icons grid_view

      //.listing-header.my-5
      //  p.listing-header__title results (
      //    span.num-result 15)
      //

      //
      //  div.listing-header__sort

      //


      .row.mt-4
        .col-md-4.col-lg-3
          .card.filter-list
            .card__header
              h4.card__title Filters
              .card__header-actions
                button.btn.btn--primary.btn--icon
            form
              .card__content
                .list
                  .list-title
                    p.text-weight-500 selected Options
                  .list-item
                    .list-item__content
                      p.body-2.m-0 Option 1
                    .list-item__action
                      button(class="btn btn--icon btn--text btn--sm" data-name='type-1' data-value='type1')
                        i.material-icons close
                .divider
                +group-check-field-wrapper('checkbox', 'Type', 'type-1', 'type-1', ["type1", "type2", "type3", "type4", "type5", "type6", "type7", "type8"])
                .divider
                +group-check-field-wrapper('radio', "اختيارات اخرى", 'type-2', 'type-2', ["الاختيار الاول", "الاختيار الثانى", "الاختيار الثالث", "الاختيار الرابع"])
                .divider
              .card__footer
                button.btn.btn--primary.btn--block filter items

        .col-12.col-md-8.col-lg-9
          .row
            .col-12.col-sm-6.col-lg-4
              +course-card('Lorem ipsum dolor sit amet, quae sequi?', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit.', 'التوحد')
            .col-12.col-sm-6.col-lg-4
              +course-card('Lorem ipsum dolor sit amet', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. A blanditiis cum dolor dolore doloremque dolorum, ipsum laboriosam omnis quisquam voluptatum!')
            .col-12.col-sm-6.col-lg-4
              +course-card('عنوان افتراضى للمدونة', 'عنوان افتراضى للمدونة عنوان افتراضى للمدونة')
            .col-12.col-sm-6.col-lg-4
              +course-card('عنوان افتراضى للمدونة عنوان افتراضى للمدونة عنوان', 'عنوان افتراضى للمدونة عنوان افتراضى للمدونة عنوان افتراضى للمدونة عنوان افتراضى للمدونة', 'التوحد')
          .row.justify-content-center
            include ../components/general-component/pagination.pug
