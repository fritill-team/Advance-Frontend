					#nav-classification.tab-panel
						.row 
							.col-md-6
								form(class="card" action="" method="")
									.field-wrapper.field-wrapper--full 
										label(class="field-wrapper__label" for="classifications-name") Name *
										.field-wrapper__content 
											input(class="field" type="text" placeholder="Classification" name="name" id="classifications-name" required value="classification")
									.field-wrapper.field-wrapper--full 
										label(class="field-wrapper__label" for="classifications-description") Score *
