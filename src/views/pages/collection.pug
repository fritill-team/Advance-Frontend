extends ../layouts/admin.pug
block title
	title collections


block content
	// page title bread-crumbs
	include ../components/bread-crumbs.pug
	+pageTitle("page-header--extension")
		.tabs.tabs--center.mb-0.mt-3
			a(class="tab tab--active" href='#nav-recommendation') recommendation
			a(class="tab" href='#nav-classification') classification
	.container
		.row
			.col-lg-12
				.tabs-panels
					#nav-recommendation.tab-panel.tab-panel--active
						.row 
							.col-md-6
								form(class="card" action="" method="")
									.field-wrapper.field-wrapper--full 
										label(class="field-wrapper__label" for="recommendations-name") Name *
										.field-wrapper__content 
											input(class="field" type="text" placeholder="Recommendations" name="name" id="recommendation-name" value="recommendation") 
									.field-wrapper.field-wrapper--full
										label(class="field-wrapper__label" for="recommendations-description") Description *
										.field-wrapper__content
											textarea(class="field" required name="description" id="recommendations-description" placeholder="Recommendation Description")
									.form-actions
										button.btn.btn--primary.btn--text(type='reset') Cancel
										button.btn.btn--primary.btn--rounded Save

							.col-md-6
								.card 
									.card__header 
										h4 recommendation name 
										.card__tools 
											include ../components/list-dropdown.pug
