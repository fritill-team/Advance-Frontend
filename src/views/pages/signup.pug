extends ../layouts/auth.pug


block title
  title signup

block content
  div(class="sign_in_up_bg")
    //- img(class="sign_in_up_bg--img" src='../../assets/images/sign.svg' alt='')
    .sign_in_up_form-wrapper
      div(class="container ")
        div(class="row justify-content-lg-center justify-content-md-center")
          .col-lg-12
            div(class="main_logo25" , id="logo")
              //- a(href='index.html')
              //-   img(src='../../assets/images/logo.svg' alt='')
              //- a(href='index.html')
              //-   img.logo-inverse(src='../../assets/images/logo.svg' alt='')
              h2(class="fw-bold") Advance
          div(class="col-lg-6 col-md-8")
            section.sign_form
              h2 Welcome to Edututs+
              //- p Sign Up and Start Learning!
              form
                div(class="ui search focus")
                  div(class="icon input lbel25")
                    label(for="validationServerFullName" class="sr-only d-none") Full Name *
                    div(class="ui left icon input swdh19 w-100")
                      input(
                        class="prompt srch_explore"
                        type="text"
                        name="fullname"
                        id="validationServerFullName" required maxlength="64"
                        aria-describedby="validationServer01Feedback"
                        placeholder="Full Name" autofocus)
                    div(class="invalid-feedback my-2" id="validationServer01Feedback") Requerd
                div(class="ui search focus mt-15")
                  div(class="icon left input lbel25")
                    label(for="validationServerEmail" class="sr-only d-none") Email Address *
                    div(class="ui left icon input swdh19 w-100")
                      input(
                        class="prompt srch_explore"
                        type="email"
                        name="emailaddress"
                        id="validationServerEmail" required maxlength="64"
                        aria-describedby="validationServer02Feedback"
                        placeholder="Email Address" )
                    div(class="invalid-feedback my-2" id="validationServer02Feedback") Requerd
                div(class="ui search focus mt-15")
                  div(class="icon input lbel25")
                    label(for="validationServerPassword" class="sr-only d-none") Password *
                    div(class="ui left icon input swdh19 w-100")
                      input(
                        class="prompt srch_explore"
                        type="password"
                        name="password"
                        id="validationServerPassword"
                        aria-describedby="validationServer03Feedback"
                        required maxlength="64"
                        placeholder="Password" )
                    div(class="invalid-feedback my-2" id="validationServer03Feedback") Requerd
                  div(class="ui form mt-30 checkbox_sign")
                    div(class="inline field")
                      div(class="ui checkbox mncheck")
                        input(
                          type="checkbox"
                          tabindex="0"
                          class="hidden"
                          id="remembr-signup"
                          )
                        label(for="remembr-signup") Iâ€™m in for emails with exciting discounts and personalized recommendations
                button(
                  class="login-btn"
                  type="submit")
                  | Next
              p(class="sgntrm146")  By signing up, you agree to our
                a(href="terms_of_use.html")   Terms of Use
                |   and
                a(href="terms_of_use.html")  Privacy Policy
                |  .
              p(class="mb-0 mt-30")  Already have an account?
                a(href="sign_in.html")  Log In
            .sign_footer
              | &copy; 2020
